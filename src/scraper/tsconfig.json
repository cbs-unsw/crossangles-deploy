{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "../../typings",
      "../../node_modules/@types"
    ],
    "outDir": "../../build",
  },
  "include": [
    "**/*",
  ],
}
