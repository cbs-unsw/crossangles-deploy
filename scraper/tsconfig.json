{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "typeRoots": [
      "node_modules/@types",
    ],
    "outDir": "build",
  },
  "include": [
    "**/*",
  ],
  "exclude": [
    "node_modules",
    "build",
    "**/*.spec.ts",
    "**/*.test.ts",
  ],
}
